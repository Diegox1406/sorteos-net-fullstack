@{
    ViewBag.Title = "Apartar Boletos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var boletos = ViewBag.Boletos as List<long>;
}

<h2>Formulario para Apartar Boletos</h2>

@if (boletos != null && boletos.Any())
{
    <p><strong>Boletos seleccionados:</strong> @string.Join(", ", boletos)</p>

    <form method="post" action="@Url.Action("ConfirmarApartado", "Boleto")">
        <input type="hidden" name="ids" value="@string.Join(",", boletos)" />

        <div class="form-group">
            <label for="nombre">Nombre:</label>
            <input type="text" class="form-control" name="nombre" required />
        </div>

        <div class="form-group">
            <label for="dni">DNI:</label>
            <input type="text" class="form-control" name="dni" required maxlength="8" />
        </div>

        <div class="form-group">
            <label for="whatsapp">Número de WhatsApp:</label>
            <input type="tel" class="form-control" name="whatsapp" required pattern="^\d{9}$" placeholder="Ej. 987654321" />
        </div>

        <button type="submit" class="btn btn-primary">Confirmar Apartado</button>
    </form>
}
else
{
    <div class="alert alert-warning">No se han seleccionado boletos.</div>
}